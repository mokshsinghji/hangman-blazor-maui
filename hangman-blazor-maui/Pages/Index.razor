@page "/"

<div class="container">
    <h1>Hangman!</h1>
    <div class="input-group">
        <input class="form-control" type="number" placeholder="Word Length" @bind="WordLength"/>
        <input class="form-control" type="number" placeholder="Incorrect Attempts" @bind="IncorrectAttempts"/>
    </div>
    <button class="btn btn-primary m-3" @onclick="StartNewGame">Start New Game</button>

</div>